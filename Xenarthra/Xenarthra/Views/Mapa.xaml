<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xenarthra.Views.Mapa"
             Title="Mapa" 
             BackgroundColor="AliceBlue"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"> 


    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="btnFiltrar" Icon="swap.png" Clicked="btnFiltrar_Clicked" />
    </ContentPage.ToolbarItems>
    <StackLayout Spacing="0" BackgroundColor="#0D840D">


            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Image Source="sloth.png" HeightRequest="32" WidthRequest="32"/>
                <Label Text="Bicho-Preguiça" Font="24" TextColor="White"/>
            </StackLayout>


            <Grid VerticalOptions="FillAndExpand">     
            <Picker x:Name="AnimaisPicker" HorizontalOptions="FillAndExpand" Title="Selecionar" IsVisible="False">
                <Picker.Items>
                    <x:String>Bicho-Preguiça</x:String>
                    <x:String>Tatu</x:String>
                    <x:String>Tamandua</x:String>
                </Picker.Items>
            </Picker>        
            <maps:Map x:Name="Map"></maps:Map>      
        
        </Grid>

    </StackLayout>
</ContentPage>