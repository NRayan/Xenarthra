<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xenarthra.Views.Cadastro"
             BackgroundImage="background.png"
             BackgroundColor="Blue">
    
    <StackLayout VerticalOptions="Center" Margin="30,0,30,10">
        <Image Source="profile.png" WidthRequest="128" HeightRequest="128" Margin="0,0,0,50" />
        <Entry Placeholder="Nome Completo"/>       
        <Entry Placeholder="Email" Keyboard="Email"/>
        <Entry Placeholder="Nome de Usuário"/>
        <Entry Placeholder="Senha" IsPassword="True"/>
        <Button Text="Cadastrar" TextColor="White" BorderRadius="10" BackgroundColor="#007ACC" Margin="10,10,10,0"/>
    </StackLayout>
</ContentPage>