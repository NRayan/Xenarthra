<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xenarthra.Views.Aparicao"
             Title="Enviar Imagem"
             BackgroundColor="#085808"
             xmlns:ff ="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             xmlns:ffSvg ="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
             xmlns:ffTransformation="clr-namespace:FFImageLoading.Transformations;assembly=FFImageLoading.Transformations">


    <Grid VerticalOptions="FillAndExpand" Margin="0,10">

        <Image VerticalOptions="Center" Margin="0,0,0,55" Source="emptyimg.png" HeightRequest="128" WidthRequest="128"/>
        <ff:CachedImage VerticalOptions="Center" Margin="0,0,0,55" x:Name="imgAparicao" HeightRequest="300" WidthRequest="300" IsVisible="False">
                <ff:CachedImage.Transformations>
                <ffTransformation:RoundedTransformation Radius="3" CropHeightRatio="512" CropWidthRatio="512" />
                </ff:CachedImage.Transformations>
            </ff:CachedImage>

        <Button x:Name="btnCapturar" Image="camera.png" HeightRequest="64" VerticalOptions="End" />
    </Grid>
  
</ContentPage>