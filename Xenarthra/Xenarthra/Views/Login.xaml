<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Xenarthra"
             x:Class="Xenarthra.Login"
             BackgroundColor="#0D840D">
    
    
    <StackLayout VerticalOptions="Center" Margin="30,0">
        <Image Source="iconx.png" HorizontalOptions="Center" WidthRequest="256" HeightRequest="256"/>
        <Entry x:Name="txtEmail" Placeholder="Email" Keyboard="Email" Text="norton_rayan@hotmail.com"/>
        <Entry x:Name="txtSenha" Placeholder="Senha" IsPassword="True" Text="123"/>
        <Button x:Name="btnEntrar" BorderRadius="2" Clicked="btnEntrar_Clicked" Text="Entrar" BackgroundColor="#1C551C" TextColor="White"  Margin="0,10"/>
        <Button x:Name="btnRegistrar" BorderRadius="2" Clicked="btnRegistrar_Clicked"  Text="Cadastrar" BackgroundColor="#215773" TextColor="White"/>
    </StackLayout>
    
</ContentPage>