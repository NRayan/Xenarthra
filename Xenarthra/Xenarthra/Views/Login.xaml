<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Xenarthra"
             x:Class="Xenarthra.Login"
             BackgroundColor="#0D840D">
    
    
    <StackLayout VerticalOptions="Center" Margin="30,0">
        <Image Source="iconx.png" HorizontalOptions="Center" WidthRequest="256" HeightRequest="256"/>
        <Entry Placeholder="Email" Keyboard="Email"/>
        <Entry Placeholder="Senha" IsPassword="True"/>
        <Button x:Name="btnEntrar" BorderRadius="0" Clicked="btnEntrar_Clicked" Text="Entrar" BackgroundColor="#085808" TextColor="White"  Margin="0,10"/>
        <Button x:Name="btnRegistrar" BorderRadius="0" Clicked="btnRegistrar_Clicked"  Text="Cadastrar" BackgroundColor="#005188" TextColor="White"/>
    </StackLayout>
    
</ContentPage>